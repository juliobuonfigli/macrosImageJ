//Triple colocalización

id1=getImageID();        //Obtengo el ID de la primer imagen

if(isOpen(id1-1))         //reviso el orden en el que quedó el ID de cada imagen dependiendo de cual haya quedado seleccionada 
d=1;   
else
d=0;
if(isOpen(id1-2))
e=1;
else
e=0;
if(isOpen(id1-3))
f=1;
else
f=0;

if(f == 1)
{
id2=id1-1;
id3=id1-2;
id4=id1-3;
}
else
{
	if(e == 1)
	{
	id2=id1-1;
	id3=id1-2;
	id4=id1+1;
	}
	else
	{
		if(d == 1)
		{
		id2=id1-1;
		id3=id1+1;
		id4=id1+2;
                        }
		else
		{
		id2=id1+1;
		id3=id1+2;
		id4=id1+3;
		}
	}
}

selectImage(id1);               //le cambio el título a todas las imágenes abiertas
imagen1 = getTitle();
selectImage(id2);
imagen2 = getTitle();
selectImage(id3);
imagen3 = getTitle();
selectImage(id4);
imagen4 = getTitle();

imageCalculator("AND create", imagen1, imagen2);    //opero imagen 1 y 2 y le cambio el titulo a la imagen generada
id5=getImageID();
selectImage(id5);
imagen5 = getTitle();

imageCalculator("AND create", imagen3, imagen4);   //opero imagen 3 y 4 y le cambio el titulo a la imagen generada 
id6=getImageID();
selectImage(id6);
imagen6 = getTitle();

imageCalculator("AND create", imagen5, imagen6);   //opero imagen 5 y 7 y le cambio el titulo a la imagen generada 
