if(unos1<unos2)                                                               //Veo que variable tiene la menor cantidad de pixeles blancos
	{
	if(unos1<unos3)
		{
		if(unos1<unos4)
			elmenor=unos1;
			else
			elmenor=unos4;
		}
		else
		{
		if(unos3<unos4)
			elmenor=unos3;
			else
			elmenor=unos4;
		}
	}
	else
	{
	if(unos2<unos3)
		{
		if(unos2<unos4)
			elmenor=unos2;
			else
			elmenor=unos4;
		}
		else
		{
		if(unos3<unos4)
			elmenor=unos3;
			else
			elmenor=unos4;
		}

	}


if(unos1>unos2)                                            //Veo que variable tiene la mayor cantidad de pixeles blancos (seguro que es la máscara, acá hay un error)
	{
	if(unos1>unos3)
		{
		if(unos1>unos4)
			elmayor=unos1;
			else
			elmayor=unos4;
		}
		else
		{
		if(unos3>unos4)
			elmayor=unos3;
			else
			elmayor=unos4;
		}
	}
	else
	{
	if(unos2>unos3)
		{
		if(unos2>unos4)
			elmayor=unos2;
			else
			elmayor=unos4;
		}
		else
		{
		if(unos3>unos4)
			elmayor=unos3;
			else
			elmayor=unos4;
		}

	}	


if(unos4 == unos5)                             // Identifico la máscara y hago un OR con el resto de las imágenes para obtener la superficie cubierta total
	{
	imageCalculator("OR create", imagen8, imagen9);
	id13 = getImageID();		
	selectImage(id13);
	imagen13 = getTitle();
	imageCalculator("OR create", imagen13, imagen10);
	id14 = getImageID();
	selectImage(id14);
	imagen14 = getTitle();
	}
	else
	{
	if(unos3 == unos5)
		{
		imageCalculator("OR create", imagen8, imagen9);
		id13 = getImageID();		
		selectImage(id13);
		imagen13 = getTitle();
		imageCalculator("OR create", imagen13, imagen11);
		id14 = getImageID();
		selectImage(id14);
		imagen14 = getTitle();
		}
		else
		{
		if(unos2 == unos5)
			{
			imageCalculator("OR create", imagen8, imagen10);
			id13 = getImageID();		
			selectImage(id13);
			imagen13 = getTitle();
			imageCalculator("OR create", imagen13, imagen11);
			id14 = getImageID();
			selectImage(id14);
			imagen14 = getTitle();
			}
			else
			{
			imageCalculator("OR create", imagen9, imagen10);
			id13 = getImageID();		
			selectImage(id13);
			imagen13 = getTitle();
			imageCalculator("OR create", imagen13, imagen11);
