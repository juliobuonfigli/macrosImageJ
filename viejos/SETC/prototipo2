selectImage(id7);
imagen7 = getTitle();

selectImage(id6);           //cierro las imágenes que no voy a utilizar
close();
selectImage(id5);
close();

imageCalculator("AND create", imagen1, "Mask");     //Cuento la cantidad de pixeles blancos en la imagen uno dentro de la seleccion
id8=getImageID();
selectImage(id8);
imagen8 = getTitle();   

   w = getWidth;
   h = getHeight;
   a = newArray(w*h);
   i = 0;
   unos1 = 0;    
	
  for (y=0; y<h; y++){
      for (x=0; x<w; x++){
          a[i++] = getPixel(x,y);
		}}

for(i=0; i<w*h; i++)
{
if(a[i]==255){
		unos1++;

		}}


